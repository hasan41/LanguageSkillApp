<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hasannaseer.quizapp.SplashscreenActivity">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/code"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:alpha="0.9"
        android:background="@color/colorPrimaryDark1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_coding"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/title"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/colorTitle"
        android:textSize="33dp"
        android:layout_margin="20dp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat.Headline"
        android:id="@+id/title"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="89dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="serif-monospace"
        android:text="Welcome back... Hasan Naseer"
        android:textColor="@color/colorAccent1" />

    <TextView
        android:id="@+id/textView"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="serif-monospace"
        android:text="Â©Hasan Naseer"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp" />



</RelativeLayout>
